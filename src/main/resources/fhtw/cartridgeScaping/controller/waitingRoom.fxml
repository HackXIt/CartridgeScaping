<!--NOTE Loading Screen which is built like the gameplay -->

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fhtw.cartridgeScaping.controller.WaitingRoomController">
    <center>
        <VBox>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Chat" />
            <TextArea prefHeight="200.0" prefWidth="200.0" />
            <TextField />
        </VBox>
    </center>
    <bottom>
        <HBox prefHeight="100.0" prefWidth="200.0" spacing="20.0" BorderPane.alignment="CENTER">
            <ToolBar prefHeight="40.0" prefWidth="200.0">
                <Button mnemonicParsing="false" text="Game Settings" />

                <Button onAction="#onGameAbort" text="Abort" />
            </ToolBar>
            <Separator orientation="VERTICAL" prefHeight="200.0" />
            <VBox prefHeight="200.0" prefWidth="100.0">
                <Text fx:id="status" strokeType="OUTSIDE" strokeWidth="0.0" text="Waiting Room" />
                <HBox prefHeight="100.0" prefWidth="200.0">
               <CheckBox fx:id="readyBox" onAction="#onReady" mnemonicParsing="false" text="Ready" />
                    <ProgressBar fx:id="progBar" progress="0.0" HBox.hgrow="SOMETIMES">
                  <HBox.margin>
                     <Insets left="20.0" top="5.0" />
                  </HBox.margin></ProgressBar>
                </HBox>
                <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
            </VBox>
            <Separator orientation="VERTICAL" prefHeight="200.0" />
            <VBox prefHeight="200.0" prefWidth="100.0">
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="PlayerList" />
                <ListView fx:id="playerList" prefHeight="200.0" prefWidth="200.0" />
            </VBox>
        </HBox>
    </bottom>
    <right>
        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <Button onAction="#onGameSettings" text="Game settings" />
        </VBox>
    </right>
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <Menu mnemonicParsing="false" text="?">
                <MenuItem mnemonicParsing="false" text="!" />
            </Menu>
        </MenuBar>
    </top>
</BorderPane>
